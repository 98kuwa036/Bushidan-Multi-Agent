# Bushidan Multi-Agent System v9.1 - Configuration Template
# Copy this file to .env and fill in your API keys

# System Configuration
SYSTEM_MODE=battalion  # battalion, company, platoon

# Required API Keys
CLAUDE_API_KEY=your_claude_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional API Keys
TAVILY_API_KEY=your_tavily_api_key_here  # For web search
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here  # For Slack integration
NOTION_TOKEN=secret_your-notion-token-here  # For long-term memory

# Service Endpoints (default values work for standard setup)
OLLAMA_ENDPOINT=http://localhost:11434
LITELLM_ENDPOINT=http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Memory Configuration
MEMORY_FILE=shogun_memory.jsonl
MEMORY_MAX_SIZE=10000  # Maximum entries before cleanup

